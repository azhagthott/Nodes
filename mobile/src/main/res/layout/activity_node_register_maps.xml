<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="cl.zecovery.android.administradordenodos.activity.NodeRegisterMapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey_alpha"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textViewLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lat_short"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/grey_300" />

        <TextView
            android:id="@+id/textViewLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lng_short"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/grey_300" />

    </LinearLayout>

</fragment>


